<div class="container">
  <h5>Input Your User Info:</h5>
  <div class="row">
    <form id="userForm" class="col s12">
      <div class="row">
        <div class="input-field col s12">
          <input placeholder="User Name" id="user_name" type="text" name="user_name" class="validate" autocomplete="user_name" required>
          <label for="user_name">User Name</label>
        </div>
       </div>
      <div class="row">
        <div class="input-field col s12">
          <input placeholder="Email" name="email" id="email" type="email" class="form-control" autocomplete="email
          " >
          <label for="email">Email</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <input id="password" name="password" type="password" class="form-control" autocomplete="current-password" required>
          <label for="password">Password</label>
        </div>
      </div>
        <button id="loginBtn" class="btn waves-effect waves-light" type="login" name="action">Login
      </button>
       <button id="signUpBtn" class="btn waves-effect waves-light" type="signUp" name="action"><a href="/signup" >Sign-Up</a>
      </button>
     </div>
    </form>
  </div>
  </div>